<%- include('./partials/head',{
    title : 'Registro'
  }) %> 

<body class="register">
    <%- include('./partials/header') %> 

    <main class="register_main">
        <section class="register_main_section">
            <h1>Registrate</h1>

            <form action="" method="" class="form">
                <div class="form_box">
                    <label class="form_label" for="nombre">Nombre</label>
                    <input class="form__input" type="text" id="nombre"  name="nombre" required>
                    <span class="form_div_span">Este campo es obligatorio*</span>
                </div>
                <div class="form_box">
                    <label class="form_label" for="apellido">Apellido</label>
                    <input class="form__input" type="text" id="apellido"  name="apellido" >
                </div>
                <div class="form_box">
                    <label class="form_label" for="email">Correo Electrónico</label>
                    <input class="form__input" type="email" id="email"  name="email" required>
                    <span class="form_div_span">Este campo es obligatorio*</span>
                </div>
                <div class="form_box">
                    <label class="form_label" for="password">Contraseña</label>
                    <input class="form__input" type="password" id="password" name="password" required>
                    <span class="form_div_span">Este campo es obligatorio*</span>
                </div>
                <div class="form_box">
                    <label class="form_label" for="password2">Confirmar Contraseña</label>
                    <input class="form__input" type="password" id="password2" required>
                    <span class="form_div_span">Este campo es obligatorio*</span>
                </div>
                <label class="form_label">
                    <input class="form__input_checkbox" type="checkbox"> Acepto los terminos y condiciones
                    <input class="form__input_checkbox" type="checkbox"> Acepto el uso de cookies
                </label>
                <div class="form_box_buttom">
                    <a class="form_button_cancel" href="">Cancelar</a>
                    <button class="form_button_submit" type="submit">REGISTRARME</button>
                </div>
            </form>
        </section>
    </main>
    <%- include('./partials/footer') %> 

</body>
</html>